<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :exhibition, style: "display: block" %>
    <%= form.select :exhibition_id, options_for_select(@exhibitions.map{ |e| [e.name + ' ' + e.year.to_s, e.id]}, @current_exhibition) %>
  </div>
  
  <div>
    <p>If the exhibition you need does not appear in the list please add it here</p>
    <div>
      <%= form.label :exhibition_name, style: "display: block" %>
      &nbsp;&nbsp;&nbsp;&nbsp;<%= form.text_field :exhibition_name %>
      <%= form.label :exhibition_year, style: "display: block" %>
      &nbsp;&nbsp;&nbsp;&nbsp;<%= form.select :exhibition_year, options_for_select(@years), prompt: "Select the exhibition year" %>
    </div>
  </div>

  <div>
    <%= form.label :publication, style: "display: block" %>
    <%= form.select :publication_id, options_for_select(@publications.map{ |p| [p.name, p.id]}, @current_publication) %>
  </div>

  <div>
    <p>If the publication you need does not appear in the list please add it here</p>
    <%= form.label :publication_name, style: "display: block" %>
    &nbsp;&nbsp;&nbsp;&nbsp;<%= form.text_field :publication_name %>
    <%= form.label :publication_type, style: "display: block" %>
    &nbsp;&nbsp;&nbsp;&nbsp;<%= form.select :publication_type, options_for_select(@publication_types), prompt: "Select the publication type" %>
    </div>
  <br>
  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :author, style: "display: block" %>
    <%= form.text_field :author %>
  </div>

  <div>
    <%= form.label :favorability, style: "display: block" %>
    <%= form.select :favorability, @favorability, {}, {value: params[:favorability], id: :article_favorability} %>
  </div>

  <div>
    <%= form.submit "Update", class: "btn btn-primary" %>
  </div>
<% end %>
