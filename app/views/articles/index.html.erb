<h1>Articles</h1>

<%= form_tag import_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import CSV" , class: "btn btn-primary"%>
<% end %>
<br />
<br />
<div class="table-container">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Year</th>
        <th>Exhibition</th>
        <th>Publication</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.exhibition.year %></td>
          <td><%= article.exhibition.name %></td>
          <td><%= article.publication.name %></td>
          <% if current_user %>
          <td><%= link_to "EDIT", edit_article_path(article), class: "btn btn-primary" %></td>
          <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New article", new_article_path, class: "btn btn-secondary" %>
