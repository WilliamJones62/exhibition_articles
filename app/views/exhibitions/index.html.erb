<h1>Exhibitions</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @exhibitions.each do |exhibition| %>
      <tr>
        <td><%= exhibition.name %></td>
        <td><%= exhibition.year %></td>
        <% if current_user %>
        <td><%= link_to "EDIT", edit_exhibition_path(exhibition), class: "btn btn-primary" %></td>
        <% end %>
        </tr>
      <% end %>
  </tbody>
</table>