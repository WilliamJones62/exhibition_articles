<h1>Publications</h1>

<div class="table-container">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @publications.each do |publication| %>
        <tr>
          <td><%= publication.name %></td>
          <% if current_user %>
          <td><%= link_to "EDIT", edit_publication_path(publication), class: "btn btn-primary" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>